<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
        android:id="@+id/parxml_saxp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAX解析"
        android:layout_weight="1"
        />
    	<Button
        android:id="@+id/parxml_saxc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="SAX生成"
        android:layout_weight="1"
        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <Button
        android:id="@+id/parxml_domp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dom解析"
        android:layout_weight="1"
        />
    	<Button
        android:id="@+id/parxml_domc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Dom生成"
        android:layout_weight="1"
        />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <Button
        android:id="@+id/parxml_pullp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pull解析"
        android:layout_weight="1"
        />
    	<Button
        android:id="@+id/parxml_pullc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Pull生成"
        android:layout_weight="1"
        />
    </LinearLayout>
    
    <TextView
        android:id="@+id/parxml_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/beige"
        />

</LinearLayout>