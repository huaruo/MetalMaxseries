<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <Button 
        android:id="@+id/bcr_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送至内部动态注册的BroadcastReceiver"
        />
    <Button 
        android:id="@+id/bcr_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送至内部静态注册BroadcastReceiver"
        />
    <Button 
        android:id="@+id/bcr_btn3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送至系统BroadcastReceiver"
        />
    <Button 
        android:id="@+id/bcr_btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exit"
        />

</LinearLayout>